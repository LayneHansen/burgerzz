{{!-- container for burgers --}}


<div class="container">

  <div class="row">
    
    <div class="col-lg-12">

      <h1>BurgerZZ</h1>

    </div>
  
  </div>

  <div class="row">
    
    <div class="col-md-6">
      
      <h3>Create a Burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="Create Burger">New Burger:</label>
          <input type="text" id="burger-text" name="name">
          <button type="submit" class="btn btn-primary mb-2" id="submit">Submit</button>
        </div>
      </form>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
            {{this.name}}
            <button class="submit" id="crush-burger">
              {{#if devoured}}YUM!{{else}}CRUSH!{{/if}}
            </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    
    </div>

    <div class="col-md-6">
      <h3>Crushed Burgers</h3>
      {{name}}
    </div>

      

  </div>

<p>Enter a burger you'd like to Create then click "Submit".</p>
</div>


